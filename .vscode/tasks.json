{
    "version": "2.0.0",
    "tasks": [
        /* 백엔드 실행 태스크 */
        {
            "label": "백엔드 서버 실행 - 개발 모드",
            "type": "shell",
            "command": "uv run fastapi run dev",
            "options": {
                "cwd": "${workspaceFolder}/backend",
                "env": {
                    "PORT": "8000"
                }
            },
            "isBackground": true,
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [],
            "detail": "백엔드 서버를 개발 모드로 실행합니다.",
        },
        {
            "label": "백엔드 서버 실행",
            "type": "shell",
            "command": "uv run uvicorn main:app --host 0.0.0.0 --port 8000",
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "isBackground": true,
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [],
            "detail": "백엔드 서버를 실행합니다.",
        },

        /* 프론트엔드 실행 태스크 */
        {
            "label": "프론트엔드 서버 실행 - 개발 모드",
            "type": "shell",
            "command": "npm run dev",
            "options": {
                "cwd": "${workspaceFolder}/frontend",
                "env": {
                    "PORT": "3000"
                }
            },
            "isBackground": true,
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "프론트엔드 서버를 개발 모드로 실행합니다."
        },
        {
            "label": "프론트엔드 빌드",
            "type": "shell",
            "command": "npm run build",
            "options": {
                "cwd": "${workspaceFolder}/frontend",
                "env": {
                    "PORT": "3000"
                }
            },
            "problemMatcher": [],
            "group": "build",
            "detail": "Next.js 앱을 빌드합니다."
        }
    ]
}